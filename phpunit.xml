<phpunit
        backupGlobals="false"
        bootstrap="vendor/autoload.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
>
    <testsuites>
        <testsuite name="unit">
            <directory prefix="class-" suffix=".php">./tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
